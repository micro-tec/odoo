<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_view_partner_form" model="ir.ui.view">
            <field name="name">as.view.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="as_codigo_microtec" />
                    <field name="as_codigo_tienda" />
                    <field name="as_tax_partner_id" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
